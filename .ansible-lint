---
exclude_paths:
  # Virtual environments (absolute paths)
  - ".venv/"
  - "venv/"
  - ".env/"
  - "env/"
  
  # System and cache (absolute paths)
  - ".git/"
  - ".tox/"
  - ".cache/"
  - ".pytest_cache/"
  - "__pycache__/"
  - "**/__pycache__/"
  
  # CI/CD (absolute paths)
  - ".github/"
  - ".gitlab/"

skip_list:
  - no-handler
  - no-changed-when
  - command-instead-of-module
  - no-free-form
  - yaml[line-length]
  - yaml[truthy]
  - var-naming[no-role-prefix]
  - jinja[spacing]
  - name[template]

enable_list:
  - fqcn-builtins
  - no-log-password

offline: true
profile: min
strict: false

# Debug settings
verbosity: 2
parseable: true
progressive: true

